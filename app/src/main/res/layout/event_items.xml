<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/event_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#4E65FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_male_24" />

    <ImageView
        android:id="@+id/checked_box_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/event_img"
        app:layout_constraintEnd_toEndOf="@+id/event_img"
        app:srcCompat="@drawable/ic_baseline_check_box_24" />

    <ImageView
        android:id="@+id/check_box_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/event_img"
        app:layout_constraintEnd_toEndOf="@+id/event_img"
        app:srcCompat="@drawable/ic_baseline_check_box_outline_blank_24" />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活動名稱"
        android:textSize="24sp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_img" />
</androidx.constraintlayout.widget.ConstraintLayout>